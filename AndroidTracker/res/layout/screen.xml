<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
	android:orientation="vertical">
	
	<TextView 
		android:text="Tourname" 
		android:layout_height="wrap_content" 
		android:gravity="center_horizontal|center_vertical" 
		android:layout_width="fill_parent" 
		android:id="@+id/Header">
	</TextView>

	<LinearLayout 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent">
		
		<TextView 
			android:id="@+id/TextView12" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_gravity="center"
			android:text="Livetracking:">
		</TextView>
		<ToggleButton 
			android:id="@+id/StartStopButton"
			android:text="@+id/ToggleButton01" 
			android:layout_width="wrap_content" 
			android:layout_gravity="center" 
			android:layout_height="wrap_content" 
			android:textOn="Stop" 
			android:textOff="Start" 
			>
		</ToggleButton>
		<Button 
			android:id="@+id/PauseButton"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="Pause" 
			android:layout_gravity="center" 
			>
		</Button>
		<ProgressBar 
			android:id="@+id/LiveBlinky"
			android:layout_toLeftOf="@+id/DigitalClock01" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content" 
			android:layout_gravity="center|right" 
			>
		</ProgressBar>
		<DigitalClock 
			android:id="@+id/ElapsedTime"
			android:text="@+id/DigitalClock01" 
			android:gravity="center_vertical|right" 
			android:layout_height="wrap_content" 
			android:layout_gravity="center|right" 
			android:layout_width="wrap_content" 
			>
		</DigitalClock>
	</LinearLayout>

	<TableLayout 
		android:id="@+id/TableLayout01" 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent" 
		android:stretchColumns="1">
	
		<TableRow 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content">
	
			<TextView 
				android:id="@+id/TextView02" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:padding="3dip" 
				android:text="Longitude">
			</TextView>	
			<TextView 
				android:id="@+id/ValLongitude"
				android:text="@+id/TextView03" 
				android:layout_height="wrap_content" 
				android:padding="3dip"
				android:layout_width="wrap_content" 
				android:layout_gravity="right" 
				>
			</TextView>
		</TableRow>
		
		<TableRow 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
			
			<TextView 
				android:id="@+id/TextView04" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:text="Latitude" 
				android:padding="3dip">
			</TextView>
			<TextView 
				android:id="@+id/VelLatitude"
				android:text="@+id/TextView05" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:layout_gravity="right" 
				android:padding="3dip" 
				>
			</TextView>
		</TableRow>
		
		<TableRow 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
			
			<TextView 
				android:id="@+id/TextView06" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:text="Altitude" 
				android:padding="3dip">
			</TextView>
			<TextView
				android:id="@+id/ValAltitude" 
				android:text="@+id/TextView07" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:layout_gravity="right" 
				android:padding="3dip" 
				>
			</TextView>
		</TableRow>
		
		<TableRow 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
			
			<TextView 
				android:id="@+id/TextView10" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:padding="3dip" 
				android:text="Distance">
			</TextView>
		
			<TextView 
				android:id="@+id/ValDistance"
				android:text="@+id/TextView11" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:layout_gravity="right"
				android:padding="3dip" >
			</TextView>
		</TableRow>
		
		<TableRow 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
			
			<TextView 
				android:id="@+id/TextView08" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:padding="3dip" 
				android:text="Average Speed">
			</TextView>
			<TextView 
				android:id="@+id/ValAvSpeed"
				android:text="@+id/TextView09" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:layout_gravity="right" 
				android:padding="3dip">
			</TextView>
		</TableRow>
	</TableLayout>
	
	<LinearLayout 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent">
		
			<Button 
				android:id="@+id/SettingsButton"
				android:layout_height="wrap_content" 
				android:text="Settings" 
				android:layout_width="fill_parent"> 
			</Button>
	</LinearLayout>
</LinearLayout>
